<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/character_organization_listView_checkBox"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/character_organization_listView_status_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="14dp"
                android:autoSizeTextType="uniform"

                android:maxLines="1"
                android:text="名前" />

            <TextView
                android:id="@+id/character_organization_listView_status_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:maxLines="1"
                android:text="職業"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/character_organization_listView_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ステータス" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>